{
	"name": "harmonograph",
	"version": "2.0.0",
	"description": "Draw beautiful geometric shapes in the browser",
	"scripts": {
		"build": "uglifyjs harmonograph.js --compress --mangle --output ./harmonograph.min.js",
		"watch:js": "onchange \"harmonograph.js\" -- npm run build",
		"watch:site": "browser-sync --watch harmonograph.min.js",
		"watch": "npm run build && npm run watch:js | npm run watch:site",
		"prepublish": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex-page/harmonograph.git"
	},
	"keywords": [
		"harmonograph",
		"lissajous curves",
		"art",
		"geometric"
	],
	"main": "harmonograph.min.js",
	"author": {
		"name": "Alex Page",
		"email": "alex@alexpage.com.au",
		"url": "http://alexpage.com.au"
	},
	"contributors": [
		{
			"name": "Alex Page",
			"email": "alex@alexpage.com.au",
			"url": "http://alexpage.com.au"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/alex-page/harmonograph/issues"
	},
	"devDependencies": {
		"browser-sync": "^2.26.3",
		"onchange": "^5.1.0",
		"uglify-js": "^3.4.9"
	}
}
